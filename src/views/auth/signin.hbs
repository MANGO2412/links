<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <form action="/signin" class="card card p-4" method="post">
                <h3 class="text-center my-3">
                    SignIn
                </h3>
                <img src="" alt="" class="card img-top mx-auto m 2 rounded-circle w-50">
                <div class="card-body">
                    {{!--email --}}
                    <labe for="username" class="fs-6 mb-2">Write a Email</labe>
                    <input type="text" name="email" placeholder="youremail@gmail.com" class="form-control mb-3" autofocus>
                    {{!-- password --}}
                    <label for="password">password</label>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control mb-3" placeholder="password">
                    </div>
                    <button class="btn btn-primary btn-block">
                        Login
                    </button>
                </div>
            </form>

            {{!-- links --}}
            <p class="fs-5 text-center mt-3">
                Don't have an account?
                <a href="/signup" class="text-info">signup</a>
            </p>
        </div>
    </div>
</div>